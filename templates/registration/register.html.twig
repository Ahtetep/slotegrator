{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="wrapper">
        <div id="formContent" class="fadeInDown">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1>Register</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.userName, {
                    type: 'text',
                    label: 'userName',
                    'attr': {'class': 'form-control fadeIn second', 'placeholder': 'userName'}
                }) }}
                {{ form_row(registrationForm.email, {
                    type: 'email',
                    label: 'Email',
                    'attr': {'class': 'form-control fadeIn second', 'placeholder': 'email'}
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    type: 'password',
                    label: 'Password',
                    'attr': {'class': 'form-control fadeIn third mb-15', 'placeholder': 'password'}
                }) }}

            <input type="submit" class="fadeIn fourth" value="Зарегистрироваться">
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
